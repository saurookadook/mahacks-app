<% if current_user %>
    <div class="container">
        <div class="row justify-content-around">
            <div class="col-3">
                <%= link_to "View your ToDos!", user_to_do_items_path(current_user) %>
            </div>
            <div class="col-3">
                <%= link_to "Log Out", destroy_user_session_path, method: 'delete' %>
            </div>
        </div>
    </div>
<% else %>
    <div class="container">
        <div class="row justify-content-around">
            <div class="col-3">
                <%= link_to "Log In!", new_user_session_path %><br>
            </div>
            <div class="col-3">
                <%= link_to "Sign up!", new_user_registration_path %>
            </div>
        </div>
    </div>
<% end %>