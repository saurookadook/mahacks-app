<% if current_user %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4 py-2 greeting">
                <h3>Welcome, <%= current_user.username %>!</h3>
            </div>
        </div>
    </div>
<% else %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4 py-2 greeting">
                <h3>Sign up to keep track of the 8 million things you want to do!</h3>
            </div>
        </>
    </div>
<% end %>